<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indicator_3">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:contentPaddingRight="@dimen/_20sdp"
        app:contentPaddingLeft="@dimen/_20sdp">
        <ImageView
            android:id="@+id/offerimg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="#11000000"
            android:scaleType="fitCenter"
            android:src="@drawable/promo6" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:contentPaddingLeft="@dimen/_20sdp"
        app:contentPaddingRight="@dimen/_20sdp">

        <ImageView
            android:id="@+id/offerimg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingTop="@dimen/_20sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/promo11"
            android:tint="#11000000" />
    </android.support.v7.widget.CardView>
</LinearLayout>